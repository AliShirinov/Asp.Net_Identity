@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1 style="text-align:center">Login</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="e-mail" style="font-style:italic"  class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" placeholder="password" style="font-style:italic"  class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Create" />
    <a asp-action="UpdatePassword" asp-controller="Account" class="btn btn-warning">Update Password</a>
</form>

@section Scripts{
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}